# Maintainer: Jan Marvin Garbuszus <Jan.Garbuszus@ruhr-uni-bochum.de>
# This package is required for my personal rstudio PKGBUILD
pkgname=gin
pkgver=2.1.2
arch=(i686 x86_64)
pkgrel=1
pkgdesc="Gin."
url="https://code.google.com/archive/p/google-gin/"
license=('Apache 2')
depends=('java-environment')
source=(https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/google-gin/$pkgname-$pkgver.zip)
noextract=("$pkgname-$pkgver.zip")

prepare() {
	mkdir "$pkgname-$pkgver"
    unzip "$pkgname-$pkgver.zip" -d "$pkgname-$pkgver"
}

package() {
  cd $srcdir
  # rm zipfile
  rm -rf $pkgname-$pkgver.zip
  # rstudio requires this structure
  mkdir -p $pkgdir/opt/$pkgname/$pkgver
  cp -R $srcdir/$pkgname-$pkgver/* $pkgdir/opt/$pkgname/$pkgver

  # cleanup
  rm -rf $srcdir/$pkgname-$pkgver
}

md5sums=('e2617189fe5c138945b8cc95f26bd476')
