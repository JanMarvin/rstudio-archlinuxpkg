# Maintainer: Jan Marvin Garbuszus <Jan.Garbuszus@ruhr-uni-bochum.de>
# This package is required for my personal rstudio PKGBUILD
pkgname=gin
pkgver=1.5
arch=(i686 x86_64)
pkgrel=1
pkgdesc="Gin."
url="http://code.google.com/webtoolkit/"
license=('Apache 2')
depends=('java-environment')
source=(https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/google-gin/$pkgname-$pkgver.zip)

package() {
  cd $srcdir
  # rm zipfile
  rm -rf $pkgname-$pkgver.zip
  # rstudio requires this structure
  mkdir -p $pkgdir/opt/$pkgname/$pkgver
  cp -R $srcdir/* $pkgdir/opt/$pkgname/$pkgver
}

md5sums=('2409168cc18bf5f341e107e6887fe359')
