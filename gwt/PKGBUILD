# Maintainer: Jan Marvin Garbuszus <jan.garbuszus@ruhr-uni-bochum.de>
# This package is intended to be used with my rstudio PKGBUILD
pkgname=gwt
pkgver=2.8.1
arch=(i686 x86_64)
pkgrel=1
pkgdesc="Google Web Toolkit is an open source toolkit allowing developers to create Ajax applications in the Java programming language."
url="http://code.google.com/webtoolkit/"
license=('Apache 2')
depends=('java-environment')
source=(http://storage.googleapis.com/gwt-releases/$pkgname-$pkgver.zip)
options=(!strip)

package() {
  cd $srcdir/
  # rstudio build structure
  mkdir -p $pkgdir/opt/$pkgname/$pkgver/
  cp -R $pkgname-$pkgver/* $pkgdir/opt/$pkgname/$pkgver/
}

md5sums=('ddd572887957fd5cdfde3469bd8c1102')
